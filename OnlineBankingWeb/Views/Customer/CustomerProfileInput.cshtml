
@{
    ViewBag.Title = "Manage";
}



<p class="text-success">@ViewBag.StatusMessage</p>
<h4>Manage your account</h4>
<br/>


<div>

    <form method="post">


        <br />

        <table style="width:100%;padding-top: 0px;margin-top: 0px;">
            <col width="20%">
            <col width="80%">

            <tr><td>Name</td><td><input type="text" name="name" value="@ViewBag.name" /></td></tr>
           
            <tr><td>Address</td><td><input type="text" name="address" value="@ViewBag.address"></td></tr>
            <tr><td>Phone</td><td><input type="text" name="phone" value="@ViewBag.phone"></td></tr>

        </table>

        <br />


      
        
        <input type="submit" value="Update Profile" />
    </form>

</div>

<h3>@ViewBag.manageAccountMessage</h3>