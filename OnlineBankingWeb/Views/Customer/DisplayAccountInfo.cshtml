@model List<OnlineBankingWeb.Models.TransactionModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "DisplayAccountInfo";
    WebGrid grid = new WebGrid(Model);
}

<h2>@ViewBag.accounNumberDetails</h2>
<h2>@ViewBag.balanceDetails</h2>

<style type="text/css">
    .table {
        margin: 4px;
        border-collapse: collapse;
        width: 300px;
    }

    .header12 {
        background-color:  #fff;
        font-weight: bold;
        color: #fff;
        border: 1px solid black;
    }

    .table th, .table td {
        border: 1px solid black;
        padding: 5px;
    }
</style>

<h2>Your Transactions are as follows - </h2>

@grid.GetHtml(
     headerStyle: "header12",
          tableStyle: "table",
               footerStyle: "grid-footer",
                    
     columns: new[] { 
    grid.Column(header:"From Account",columnName:"fromAccountNumber"),
    grid.Column(header:"To Account",columnName:"toAccountNumber"),
    grid.Column(header:"Amount",columnName:"amount"),
    grid.Column(header:"Time and Date",columnName:"dateTime")
})
<br/><br />